@import 'vars'

#portfolio
	background white
	
#portfolio h1
	color header-font-color

.portfolio-box
	height 200px
	width 100%
	flex-direction row
	flex-wrap wrap
	position relative
	padding 1em
	
.portfolio-box img
	height 100%
	width 100%
	object-fit cover
	-webkit-filter contrast(95%) opacity(85%)
	
.portfolio-box-caption
	background-color rgba(255, 255, 255, 0.9)
	color fade-black
	opacity 0
	position absolute
	bottom 0
	left 0
	text-align center
	width 100%
	height 100%
	display flex
	justify-content center
	align-items center

.portfolio-box-caption:active
	opacity 1
	transition 0.5s

.project-category,.project-name
	padding 10px 0
	
.project-category
	color header-font-color
	font-weight 600
	font-size 1em
	
.project-name
	font-size 1.2em

@media (min-width: breakpoint-tablet)
	
	.portfolio-box
		height 210px
		width 50%
		
	.portfolio-box img
		height 100%
		width 100%
		object-fit cover
		
	.portfolio-box-caption:active
		opacity 1
		transition 0.5s

@media (min-width: breakpoint-desktop)

	.portfolio-box
		height 230px
		width 33.33%
		
	.portfolio-box img
		height 100%
		width 100%
		object-fit cover
	
	.portfolio-box-caption:hover
		opacity 1
		transition 0.5s

@media (min-width: breakpoint-xl)

	.portfolio-box
		height 300px
		width 33.33%
		
	.portfolio-box img
		height 100%
		width 100%
		object-fit cover
		
	.portfolio-box-caption:hover
		opacity 1
		transition 0.5s
		
	.project-category
		font-size 1.2em
	
	.project-name
		font-size 1.6em