@import 'vars'

.about-content
	padding 1em
	text-align justify
	font-size 0.8em
	
.head-shot img
	width 200px
	height 250px

#about .container
	display flex
	flex-direction column
	align-items center


@media (min-width: breakpoint-tablet)

	.about-content
		font-size 0.8em
		
	#about .container
		display flex
		flex-direction row

@media (min-width: breakpoint-desktop)

	.about
		display flex
		flex-direction row

	.about-content
		font-size 0.9em
		padding 0 0 0 5em
			
	.about-content p
		margin 2.5em 0
			
	#about .container
		padding 0 2em

	.head-shot img
		width 250px
		height 300px
	
	.container:before, .container:after
		content initial
			
@media (min-width: breakpoint-xl)
	
	.about-content
		font-size 1.1em
		
	.head-shot img
		width 300px
		height 350px