@import 'vars'

#footer 
	color white
	background black
	display flex
	flex-direction column
	align-items center
	justify-content center

#footer p
	margin 0
	padding 0 0 1em 0
	font-size 0.5em
	text-align center

.social i
	margin .75em 0
	padding .25em .25em
	color white

.social a
	text-decoration none
	
.social i:hover
	color primary-color
	transition 0.2s
	font-weight bold

.social
	display flex
	flex-direction row
	justify-content center



@media (min-width: breakpoint-tablet)

	.social i
		margin 1.75em 0
		padding .25em .25em
		color white


@media (min-width: breakpoint-desktop)

	.social i
		margin 2.75em 0
		padding .25em .25em
		color white


@media (min-width: breakpoint-xl)

	.social i
		margin 2.75em 0
		padding .25em .25em
		color white